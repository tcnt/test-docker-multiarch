# This is a basic workflow to help you get started with Actions

name: Build 2 images to test labels on quay.io

# Controls when the workflow will run
on:

  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

# A workflow run is made up of one or more jobs that can run sequentially or in parallel
jobs:
  # This workflow contains a single job called "build"
  build:
    # The type of runner that the job will run on
    runs-on: ubuntu-latest

    # Steps represent a sequence of tasks that will be executed as part of the job
    steps:
      # Checks-out your repository under $GITHUB_WORKSPACE, so your job can access it
      - uses: actions/checkout@v2
          
      - name: Login to container registry (Quay.io)
        uses: docker/login-action@v1
        with:
          registry: quay.io
          username: ${{ secrets.QUAY_IO_USERNAME }}
          password: ${{ secrets.QUAY_IO_ACCESS_TOKEN }}
          
      - name: Set up Docker Buildx
        id: buildx
        uses: docker/setup-buildx-action@v1
      - name: Copy the deploy content to be used in docker copy command
        run: |
          mkdir -p ./testdir/target/assembly 
          cp -r ./deploy/. ./testdir/target/assembly
      - name: Build and push
        id: docker_build
        uses: docker/build-push-action@v2
        with:
          context: ./testdir
          push: true
          tags: quay.io/tcnthomas/simpleAMD64Only:latest
          
      - name: Build and push
        id: docker_build
        uses: docker/build-push-action@v2
        with:
          context: ./testdir
          push: true
          platforms: linux/amd64,linux/arm64
          tags: quay.io/tcnthomas/simpleMultiArch:latest

      - name: Image digest
        run: echo ${{ steps.docker_build.outputs.digest }}
